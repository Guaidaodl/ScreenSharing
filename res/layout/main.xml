<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#E6E6E6"
        >
    <TextView android:id="@+id/center_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        />
    <Button android:id="@+id/connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginRight="@dimen/margin_horizontal"
            android:background="@drawable/button_select"
            android:text="连接"
            android:layout_above="@id/center_text"/>
    <LinearLayout android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_text_border"
        android:layout_marginRight="@dimen/margin_horizontal"
        android:layout_marginLeft="@dimen/margin_horizontal"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_above="@id/connect">
        <EditText android:id="@+id/ipText"
            android:hint="@string/ip_hint"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_text_layout"
            android:layout_marginRight="@dimen/margin_text_layout"
            android:layout_marginLeft="@dimen/margin_text_layout"
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:background="@drawable/ip_text_border"/>
        <EditText android:id="@+id/userName"
            android:hint="@string/name_hint"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_text_layout"
            android:layout_marginRight="@dimen/margin_text_layout"
            android:layout_marginLeft="@dimen/margin_text_layout"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:background="@drawable/name_text_border"/>
    </LinearLayout>
    <ImageView android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_horizontal"
        android:layout_marginLeft="@dimen/margin_horizontal"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img"
        android:layout_below="@id/center_text"/>

</RelativeLayout>

